// Specify overrides (theme and/or base variables etc.)
// See https://vuetifyjs.com/quick-start
$theme := {
  primary: #3f51b5
  light: #757de8
  dark: #002984
  accent: #ce93d8
  secondary: #424242
  info: #0D47A1
  warning: #ffb300
  error: #B71C1C
  success: #2E7D32
}

@require '~vuetify/src/stylus/main.styl'

// Restyling Vuetify
.application
  background-color #fff !important
  font-family 'Montserrat', sans-serif !important

// New
.opacity-30
  opacity .3

.opacity-50
  opacity .5

.pt-serif
  font-family 'PT Serif', serif

.fs85
  font-size 85px

.fs54
  font-size 54px

.fs40
  font-size 40px

.fs24
  font-size 24px

.fs20
  font-size 20px

.fs18
  font-size 18px

.fs16
  font-size 16px

.fs12
  font-size 12px
